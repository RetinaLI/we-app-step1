<script>
  import wepy from 'wepy';
  import OperationSituation from '../../components/trip/operation-situation';
  import ecCanvas from '../../plugins/ec-canvas/ec-canvas';
  import * as echarts from '../../plugins/ec-canvas/echarts';
  import tripService from '../../services/trip';

  const MAP_LINE_TITLE_COLOR = [
    '#FF7D2A',
    '#ECC600',
    '#6756FF',
    '#E33CD8',
    '#00B6D0',
    '#FF4444'];
  export default class TripDay extends wepy.page {
    data = {
      mapTitleColor: MAP_LINE_TITLE_COLOR,
      ec: {
        lazyLoad: true,
      },
      mapTitle: [
        {
          iconText: '加',
          num: 2,
          name: '急加速',
        },
        {
          iconText: '减',
          num: 2,
          name: '急减速',
        },
        {
          iconText: '超',
          num: 2,
          name: '超速',
        },
        {
          iconText: '变',
          num: 2,
          name: '急变道',
        },
        {
          iconText: '转',
          num: 2,
          name: '急转弯',
        },
        {
          iconText: '神',
          num: 2,
          name: '走神',
        },
        {
          iconText: '转',
          num: 2,
          name: '急转弯',
        },
        {
          iconText: '神',
          num: 2,
          name: '走神',
        },
        {
          iconText: '转',
          num: 2,
          name: '急转弯',
        },
        {
          iconText: '神',
          num: 2,
          name: '走神',
        },
      ],
      markers: [
        {
          iconPath: '../../assets/trip/icon-start.png',
          id: 0,
          latitude: 23.10229,
          longitude: 113.3245211,
          width: 21,
          height: 27,
          zIndex: 2,
        },
        {
          iconPath: '../../assets/trip/tran.png',
          fill: '#ff0000',
          id: 1,
          longitude: 113.335520,
          latitude: 23.21229,
          zIndex: 2,
          label: {
            content: '超',
            color: '#ffffff',
            padding: 5,
            anchorY: -17,
            anchorX: -7,
            borderRadius: 5,
            zIndex: 3,
            fontSize: 10,
            bgColor: '#ff0000',
          },
        },
        {
          iconPath: '../../assets/trip/icon-end.png',
          id: 2,
          latitude: 23.21229,
          longitude: 113.324520,
          width: 21,
          height: 27,
          zIndex: 2,
        },
      ],
      includePoints: [
        {
          longitude: 113.3245211,
          latitude: 23.10229,
        },
        {
          longitude: 113.335520,
          latitude: 23.21229,
        },
        {
          longitude: 113.324520,
          latitude: 23.21229,
        },
      ],
      polyline: [
        {
          points: [
            {
              longitude: 113.3245211,
              latitude: 23.10229,
            },
            {
              longitude: 113.335520,
              latitude: 23.21229,
            },
            {
              longitude: 113.324520,
              latitude: 23.21229,
            },
          ],
          color: '#FF0000',
          width: 2,
          dottedLine: false,
        },
      ],
      operations: [
        {
          img: '../../assets/trip/oper-icon-01.png',
          title: '今日里程',
          val: 0,
          unit: 'km',
        },
        {
          img: '../../assets/trip/oper-icon-02.png',
          title: '运行时长',
          val: 0,
        },
        {
          img: '../../assets/trip/oper-icon-08.png',
          title: '怠速时长',
          val: 0,
        },
        {
          img: '../../assets/trip/oper-icon-09.png',
          title: '燃油消耗',
          val: 0,
          unit: 'L',
        },
      ],
      year: 0,
      month: 0,
      day: 0,
      echartsRadarOption: {
        radar: {
          name: {
            textStyle: {
              color: '#bbb',
              fontSize: '10rpx',
            },
          },
          radius: '70%',
          nameGap: 2,
          splitNumber: 1,
          splitLine: {
            lineStyle: {
              color: '#bbb',
            },
          },
          indicator: [
            {name: '速度', max: 100},
            {name: '减速', max: 100},
            {name: '里程', max: 100},
            {name: '环境', max: 100},
            {name: '疲劳', max: 100},
            {name: '时段', max: 100},
            {name: '加速', max: 100},
          ],
        },
        series: [
          {
            name: '',
            type: 'radar',
            symbol: 'none',
            areaStyle: {
              color: '#E3EBFF',
            },
            lineStyle: {
              color: '#6790FD',
              type: 'dotted',
            },
            data: [
              {
                value: [43, 10, 13, 28, 35, 5, 19],
              },
            ],
          },
        ],
      },
    };

    computed = {
      mapTitleLength() {
        return Math.ceil(this.mapTitle.length / 2);
      },
    };

    components = {
      operationSituation: OperationSituation,
      radarEcharts: ecCanvas,
    };

    methods = {
      navigatorToDayTime() {
        wepy.navigateTo({
          url: `./trip-day-time?y=${this.year}-${this.month}-${this.day}`
        });
      },
      mapRadar(canvas, width, height, callback) {
        const chart = echarts.init(canvas, null, {
          width: width,
          height: height,
        });
        canvas.setChart(chart);
        callback(canvas);
        let scoreOpt = this.echartsRadarOption;
        chart.setOption(scoreOpt);
        return chart;
      }
    };
    events = {};

    onUnload() {
      this.$broadcast('destroy-echarts');
    }

    onLoad(option) {
      // console.log(option);
      this.year = option.y.split('-')[0];
      this.month = option.y.split('-')[1];
      this.day = option.y.split('-')[2];
      wepy.setNavigationBarTitle({
        title: `${this.year}年${this.month}月${this.day}日行程`,
      });
      this.getData();
    };

    async getData () {
      let {data, code} = await tripService.getTripDay({
        vin: '132132',
        date: `${this.year}-${this.month}-${this.day}`
      });
      if (code === 1) {
        this.operations[0].val = data.operations.mileage;
        this.operations[1].val = data.operations.time;
        this.operations[2].val = data.operations.runDay;
        this.operations[3].val = data.operations.loss;
        this.$apply();
      }
    };
  }
</script>
